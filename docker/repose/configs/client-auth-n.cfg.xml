<?xml version="1.0" encoding="UTF-8"?>

<!-- http://wiki.openrepose.org/display/REPOSE/Client+Authentication+Filter -->
<client-auth xmlns="http://docs.rackspacecloud.com/repose/client-auth/v1.0">
    <openstack-auth delegable="false" token-cache-timeout="600000" xmlns="http://docs.openrepose.org/repose/client-auth/os-ids-auth/v1.0">
        <identity-service username="%identity_username%" password="%identity_password%" uri="%identity_url%" />

        <!-- this tells how to find the tenant ID in the autoscale API URLs -->
        <client-mapping id-regex="/v1\.0/(\d+)/groups(/.*)?" />
        <client-mapping id-regex="/v1\.0/(\d+)/limits/?" />
    </openstack-auth>
    <white-list>
        <uri-pattern uri-regex="/v1\.0/execute/(.*)" />
    </white-list>
</client-auth>

